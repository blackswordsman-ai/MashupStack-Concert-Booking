<% title='Delete Concert Confirmation' %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen p-4 md:p-8">

    <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-6 md:p-8">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Delete Concert Confirmation</h1>
        <p class="text-lg text-gray-600 text-center mb-6">Are you sure you want to delete the concert below?</p>

        <div class="space-y-4 mb-6">
            <p><strong class="font-semibold">Concert Name:</strong> <%= concert.concertName %></p>
            <p><strong class="font-semibold">Artist:</strong> <%= concert.artist %></p>
            <p><strong class="font-semibold">Venue:</strong> <%= concert.venue %></p>
            <p><strong class="font-semibold">Date and Time:</strong> <%= new Date(concert.dateTime).toLocaleString() %></p>
            <p><strong class="font-semibold">Ticket Price:</strong> <%= concert.ticketPrice %></p>
            <p><strong class="font-semibold">Available Tickets:</strong> <%= concert.availableTickets %></p>
        </div>

        <form action="/concerts/delete_concert/<%= concert._id %>" method="POST" class="text-center space-y-4">
            <div>
                <button type="submit" class="inline-flex items-center justify-center bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition-colors duration-300">
                    Yes, Delete
                </button>
            </div>
            <div>
                <a href="/retrieve_concert" class="inline-flex items-center justify-center text-gray-600 hover:text-gray-800">
                    No, Cancel
                </a>
            </div>
            
        </form>
    </div>

</body>
</html>
